{
  "name": "mcclowes-react-sample-project",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.14.0",
    "react-anime": "^3.0.3",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-modal": "^3.11.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.1.2",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "@storybook/react": "^6.0.28",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "puppeteer": "^5.5.0",
    "react-screenshot-test": "^2.1.1"
  },
  "scripts": {
    "circleci:validate": "circleci config validate",
    "format": "prettier --write src/",
    "format:staged": "pretty-quick --staged",
    "start": "react-scripts start",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook -c .storybook -o storybook-build",
    "build": "react-scripts build",
    "test:watch": "react-scripts test",
    "test": "CI=true react-scripts test --env=jsdom",
    "test:screenshot": "SCREENSHOT_MODE=local jest -c jest.screenshot.config.js",
    "test:screenshot:update": "SCREENSHOT_MODE=local jest -c jest.screenshot.config.js -u",
    "test:screenshot-ci": "jest -c jest.screenshot.config.js"
  },
  "babelMacros": {
    "styledComponents": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:staged && npm run test && npm run circleci:validate"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
